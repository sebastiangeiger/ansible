#!/bin/sh
notify(){
  exitcode=$?
  success="$HOME/.bin/ok.png"
  fail="$HOME/.bin/fail.png"
  title="Terminal"
  if [[ $exitcode == 0 ]]; then
    image=$success
    message="... is done in `pwd`."
  else
    image=$fail
    message="... failed in `pwd`."
  fi
  /Applications/terminal-notifier.app/Contents/MacOS/terminal-notifier -message "${message}"
  # if [[ `idle_time` -ge 45 ]]; then
  #   $HOME/.bin/nma.sh "${title}" "${message}" "On machine `hostname`" 1
  # fi
  (exit $exitcode) #This passes the exitcode through to the shell
}
