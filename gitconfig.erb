[color]
	diff = auto
	status = auto
	branch = auto
[core]
	editor = /usr/bin/vim
	askpass = <%= File.join(ENV['HOME'], "git-password") %>
[alias]
	st = status --short
	co = checkout
  aa = add --all
  ap = add --patch
  dc = diff --cached
  di = diff
  ci = commit -v
  cia = commit -v --amend
  pullff = pull --ff-only
  dateof = show -s --format="%ci"
  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!source ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
