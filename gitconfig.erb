[color]
	diff = auto
	status = auto
	branch = auto
[core]
	editor = /usr/bin/vim
	askpass = <%= File.join(ENV['HOME'], ".bin" , "git-password") %>
[alias]
	st = status --short
	co = checkout
  aa = add --all
  ap = add --patch
  dc = diff --cached
  di = diff
  ci = commit -v
  cia = commit -v --amend
  pullff = pull --ff-only
  dateof = show -s --format="%ci"
  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git fancylog -1
  h = !git head
  hp = "!source $HOME/.bin/.githelpers && show_git_head"
  fancylog = "!source $HOME/.bin/.githelpers && pretty_git_log"
  l = !git fancylog --all -30
  la = !git fancylog --all
