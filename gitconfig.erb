[user]
	name = Sebastian Geiger
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile =<%= File.join(ENV['HOME'], ".gitignore_global") %>
[alias]
	st = status --short
	co = checkout
  aa = add --all
  ap = add --patch
  dc = diff --cached
  di = diff
  ci = commit -v
  cia = commit -v --amend
  pullff = pull --ff-only
  dateof = show -s --format="%ci"
  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git fancylog -1
  h = !git head
  hp = !show_git_head
  fancylog = !pretty_git_log
  l = !git fancylog --all -30
  la = !git fancylog --all
[github]
	user = sebastiangeiger
  password = !security find-internet-password -a sebastiangeiger -s github.com -w | tr -d '\n'
[push]
	default = simple
[diff]
	algorithm = patience
